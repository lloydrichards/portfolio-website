{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly"],
  "packageRules": [
    {
      "packagePatterns": ["lucide-react"],
      "description": "Pin lucide-react to latest version",
